<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <meta name="description" content="" />
        <meta name="author" content="" />        
        <title>{% block title %}| Populaide | Belgique{% endblock %}</title>
        {% block stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- BOOTSTRAP STYLE SHEET -->
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
        <!-- FONT AWESOME ICONS STYLE SHEET -->
        <link href="{{ asset('css/font-awesome.css') }}" rel="stylesheet" type="text/css" />
        <!-- CUSTOM STYLES -->
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" />
        <!-- FORMS STYLE SHEET -->
        <link href="{{ asset('css/form.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}
        
    </head>
    <body>
        {% block header %}
            <header id="top" class="navbar navbar-static-top bs-docs-nav" role="banner">
                <div class="container">
                    <div class="navbar-header"></div>
                    <nav id="bs-navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            
                        </ul>
                    </nav>
                </div>
            </header>
            <!--CONNECTION NAVBAR END  -->
            <div id="home" class="home-index">
                <div class="overlay">
                    <div class="container">
                        <a href="{{ path('tec_user_index') }}" title="Retour à l'accueil">
                            <hgroup class="col-md-8 col-md-offset-2 text-center">
                                <h1><img src="{{ asset('images/logo.png') }}" alt="Popul'Aide" width='500'/></h1>
                                <h2>L'entraide connectée</h2>
                            </hgroup>
                        </a>
                    </div>
                </div> 
                {% block search %}{% endblock %}
                <!--SEARCH SECTION END-->
            </div>
            <!--HOME SECTION END  -->   
        {% endblock %}
        
        {% block body %}
            {# Bandeau de titre bleu sur les pages intérieures #}
            {% block inside_title %}
                <div class="title">
                    <div class="overlay">
                        <div class="container">
                            <div class="row">
                                <h3>
                                    <img {% block img_h3 %}{% endblock %}/>
                                    {% block h3 %}{% endblock %}
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        {% endblock %}
        
        {% block footer %}
        <!--FOOTER MOBILE-->
        <footer class="footer_mob search ">
            <div class="container">                            
                <form  class="row form-inline">
                    <select class="col-xs-12 col-md-4 form-control inherit " name="Catégorie" autofocus>
                        <optgroup label="Animaux">
                            <option value="" id="hidden">Choisissez une catégorie</option>
                            <option value="">Garde chez le propriétaire</option>
                            <option value="">Garde à domicile</option>
                            <option value="">Promenade</option>
                            <option value="">Toilettage</option>
                        </optgroup>
                        <optgroup label="Cours">
                            <option value="">Couture</option>
                            <option value="">Peinture/dessin</option>
                            <option value="">Musique</option>
                            <option value="">Informatique</option>
                            <option value="">Langues</option>
                            <option value="">Cuisine</option>
                            <option value="">Rattrapage scolaire</option>
                            <option value="">Sport</option>
                        </optgroup>
                        <optgroup label="Soins et beauté">
                            <option value="">Pédicure</option>
                            <option value="">Manucure</option>
                            <option value="">Maquillage</option>
                            <option value="">Coiffure</option>
                            <option value="">Massage</option>
                        </optgroup>
                        <optgroup label="Jardinage">
                            <option value="">Aménagement extérieur</option>
                            <option value="">Entretien</option>
                        </optgroup>
                        <optgroup label="Transport">
                            <option value="">De personnes</option>
                            <option value="">De biens</option>
                        </optgroup>
                        <optgroup label="Bricolage">
                            <option value="">Habitat</option>
                            <option value="">Auto/Moto</option>
                            <option value="">Divers</option>
                        </optgroup>
                        <optgroup label="Animation">
                            <option value="">Clown, magicien, ventriloque...</option>
                            <option value="">DJ</option>
                            <option value="">Musicien/Groupe</option>
                        </optgroup>
                        <optgroup label="Assistance">
                            <option value="">Repassage</option>
                            <option value="">Couture</option>
                            <option value="">Nettoyage</option>
                            <option value="">Cuisine</option>
                            <option value="">Babysitting</option>
                            <option value="">Seniors</option>
                            <option value="">Rédaction/Relecture</option>
                            <option value="">Traduction/Interprétariat</option>
                        </optgroup>
                        <optgroup label="Multimédia">
                            <option value="">Réparation/Assistance/Dépannage matériel</option>
                            <option value="">Photo/Vidéo</option>
                            <option value="">Web</option>
                        </optgroup>
                    </select>
                    <input class="col-xs-12 col-md-4 form-control inherit" type="text"/>
                    <button type="submit"><img src="{{ asset("images/pictos/search.png") }}" width="100" height="100"/></button>
                </form>
            </div>
            <!--SEARCH SECTION END  -->
            <div class="container">
                <div class="row">
                    <a href="{{ path("tec_service_addannonce") }}"><button class="btn btn-primary col-xs-12 post">Je poste une annonce</button></a>
                </div>
            </div>
            <!--POST SECTION END  -->
            <p>Playpark Technobel septembre-octobre 2015</p>
        </footer>
        <!--FOOTER DESKTOP-->
        <footer id="footer_desk">
            <ul>
                <li><a href="{{ path('tec_user_how') }}">Comment ça marche ?</a></li>
                <li><a href="{{ path('tec_user_contact') }}">Contact</a></li>
                <li><a href="">Inscription</a></li>
                <li><a href="">Conditions générales d'utilisation</a></li>
            </ul>
            <p>Playpark Technobel septembre-octobre 2015</p>
        </footer>
        {% endblock %}
        {% block javascripts %}
        <!-- REQUIRED SCRIPTS FILES -->
        <!-- CORE JQUERY FILE -->
        <script src="{{ asset("/js/jquery-1.11.1.js") }}"></script>
        <!-- REQUIRED BOOTSTRAP SCRIPTS -->
        <script src="{{ asset("/js/bootstrap.js") }}"></script>
        <!-- SCROLLING SCRIPTS PLUGIN  -->
        <script src="{{ asset("/js/jquery.easing.min.js") }}"></script>
        <!-- CUSTOM SCRIPTS   -->
        <script src="{{ asset("/js/custom.js") }}"></script>
        {% endblock %}
    </body>
</html>
