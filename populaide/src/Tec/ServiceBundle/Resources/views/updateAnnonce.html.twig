{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/show-pages.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
    {{ parent() }}
        <section id="works">
                <h3>Mise a jour d'une annonce:</h3>
                <div class="container">
                
                {{ form(form) }}
                    
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    {{ flashMessage }}
                {% endfor %}
                </div>
            </div>    
    </section>

{% endblock %}
